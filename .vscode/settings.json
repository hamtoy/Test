{
  "python.analysis.diagnosticSeverityOverrides": {
    "reportDeprecated": "warning"
  },
  "python.analysis.typeCheckingMode": "basic",
  "python.testing.pytestEnabled": true,
  "python.testing.pytestArgs": [
    "tests"
  ],
  "editor.formatOnSave": true,
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit",
      "source.fixAll.ruff": "explicit"
    }
  },
  "files.exclude": {
    "**/__pycache__": true,
    "**/.pytest_cache": true,
    "**/.mypy_cache": true,
    "**/.ruff_cache": true,
    "**/*.egg-info": true
  },
  "search.exclude": {
    "**/__pycache__": true,
    "**/node_modules": true,
    "**/.venv": true
  },
  "chatgpt.openOnStartup": false,
  "vibereport.reportDirectory": "devplan",
  "vibereport.snapshotFile": ".vscode/vibereport-state.json",
  "vibereport.maxFilesToScan": 5000,
  "vibereport.excludePatterns": [
    "**/node_modules/**",
    "**/dist/**",
    "**/out/**",
    "**/build/**",
    "**/.git/**",
    "**/target/**",
    "**/.next/**",
    "**/__pycache__/**",
    "**/.venv/**",
    "**/coverage/**",
    "**/*.log",
    "**/*.lock"
  ],
  "vibereport.enableGitDiff": true,
  "vibereport.autoOpenReports": true,
  "vibereport.language": "ko",
  "vibereport.projectVisionMode": "auto",
  "vibereport.defaultProjectType": "auto-detect",
  "vibereport.defaultQualityFocus": "production",
  "vibereport.previewBackgroundColor": "ide"
}